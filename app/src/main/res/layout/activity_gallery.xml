<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#652F2F"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/discs"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/gallerys"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/gallery" />

        <ImageButton
            android:id="@+id/transaction"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/order" />

        <ImageButton
            android:id="@+id/others"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/abouts" />

    </LinearLayout>


    <ScrollView
        android:layout_width="414dp"
        android:layout_height="583dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/header" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="GALLERY"
                android:textColor="#F3DE0D"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="60dp"
                android:text="Leg Press"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/fiestaimg"
                android:layout_width="317dp"
                android:layout_height="358dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/legpress" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="FRIES AND PARTY BOX"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/partyimg"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cbfsnackbox" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="290dp"
                android:layout_height="103dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="CHEESY BACON FRIES"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/cbfimg"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cbf" />

            <!--TO BE FINISHED-->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="ARIBA"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ariba" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="280dp"
                android:layout_height="102dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="VALENTINE BURGER"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/valentineburger" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="PREPARATION BURGER"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/sampleburger" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>