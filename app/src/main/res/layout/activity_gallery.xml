<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/absbg"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#652F2F"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/discs"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/gallerys"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/gallery" />

        <ImageButton
            android:id="@+id/transac"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/order" />

        <ImageButton
            android:id="@+id/others"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="@drawable/abouts" />

    </LinearLayout>


    <ScrollView
        android:layout_width="414dp"
        android:layout_height="583dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">





            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="GALLERY"
                android:textColor="#000000"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tegpress"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Leg Press"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/lpress"
                android:layout_width="317dp"
                android:layout_height="358dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/legpress" />

            <TextView
                android:id="@+id/barbells"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="60dp"
                android:text="Barbells"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/bbell"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/barbell" />

            <TextView
                android:id="@+id/treadmills"
                android:layout_width="258dp"
                android:layout_height="44dp"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Treadmills"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/tdmill"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/treadmill" />

            <!--TO BE FINISHED-->

            <TextView
                android:id="@+id/dumbell"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Dumbbells"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/dbbell"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/dumbbells" />

            <TextView
                android:id="@+id/benchpress"
                android:layout_width="221dp"
                android:layout_height="62dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Bench Press"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/bpress"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/benchpress" />



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>