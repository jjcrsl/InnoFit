<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/absbg"
    tools:context=".Transaction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/prominent"
                android:fontFamily="@font/blinker_bold"
                android:text="HIRE YOUR TRAINER"
                android:textColor="@color/white"
                android:textSize="35sp" />


            <ImageView
                android:id="@+id/trainer1png"
                android:layout_width="317dp"
                android:layout_height="358dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trainer1" />


            <Button
                android:id="@+id/trainer1btn"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Hire TRAINER ROMY"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/blinker_bold"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/trainer2png"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trainer2" />

            <Button
                android:id="@+id/trainer2btn"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="HIRE TRAINER LISA"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/blinker_bold"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/trainer3png"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/trainer3" />

            <Button
                android:id="@+id/trainer3btn"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="HIRE TRAINER JOHN"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/blinker_bold"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/bpress"
                android:layout_width="317dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/trainer4"/>

            <Button
                android:id="@+id/trainer4btn"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="HIRE TRAINER MARK"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:fontFamily="@font/blinker_bold"
                android:textSize="20sp"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#652F2F"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/discs"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/prominent"
            app:srcCompat="@drawable/baseline_home_24" />

        <ImageButton
            android:id="@+id/gallerys"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/prominent"
            app:srcCompat="@drawable/baseline_fitness_center_24" />

        <ImageButton
            android:id="@+id/transac"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/prominent"
            app:srcCompat="@drawable/baseline_person_search_24" />

        <ImageButton
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/prominent"
            app:srcCompat="@drawable/baseline_info_24" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>